@model Entities.ViewModels.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
}

    <section id="login">
        <div class="container">
            <div align="center">
                <div class="col-lg-5 form">
                    <div class="block">
                        <form method="post" asp-controller="Account" asp-action="Login"
                              >
                            <div asp-validation-summary="ModelOnly"></div>
                            <div>
                                <input asp-for="Email" placeholder ="Электронная почта" data-val="true" data-val-required="" class="form-control" type="email" autocomplete="off"/>
                                <span asp-validation-for="Email"></span>
                            </div>
                            <br />
                            <div>
                                <input asp-for="Password" placeholder ="Пароль" data-val="true" data-val-required="" class="form-control" type="password" autocomplete="off" />
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div align="left">
                                <label asp-for="RememberMe"></label><br />
                                <input asp-for="RememberMe" />
                            </div>
                            <div class="col-xs-12">
                                <input type="submit" class="btn btn-success btn-default" value="Войти">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section> 